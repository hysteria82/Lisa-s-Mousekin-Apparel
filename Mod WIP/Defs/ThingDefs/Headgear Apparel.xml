	<defName>Lisas_MousekinApparel__MousekindCowboyHat</defName>
	<label>10-Gallon Hat</label>
	<description>The wide brim and high crown of the hat protects the face and head from the sun, rain, and wind. </description>
	<graphicData>
		<texPath>Things/MousekinApparel/Hats/MousekindCowboyHat</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		<shaderType>CutoutComplex</shaderType>
	</graphicData>
	<apparel>
		<wornGraphicPath>Things/MousekinApparel/Hats/MousekindCowboyHat</wornGraphicPath>
		<useWornGraphicMask>true</useWornGraphicMask>
		<bodyPartGroups>
			<li>FullHead</li>
		</bodyPartGroups>
		<layers>
			<li>Overhead</li>
		</layers>
		<defaultOutfitTags>
			<li>Worker</li>
		
		</defaultOutfitTags>
	</apparel>
	<costStuffCount>30</costStuffCount>
	<statBases>
		<WorkToMake>500</WorkToMake>
		<Mass>0.1</Mass>
		<StuffEffectMultiplierArmor>0.01</StuffEffectMultiplierArmor>
		<StuffEffectMultiplierInsulation_Cold>0.01</StuffEffectMultiplierInsulation_Cold>
		<StuffEffectMultiplierInsulation_Heat>0.01</StuffEffectMultiplierInsulation_Heat>
		<EquipDelay>1</EquipDelay>
	</statBases>
	<equippedStatOffsets>
		<TrainAnimalChance>0.1</TrainAnimalChance>
	</equippedStatOffsets>
</ThingDef>
</Defs>