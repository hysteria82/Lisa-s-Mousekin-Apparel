<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	<!--Nurse-->
<ThingDef ParentName="LisasMousekinApparelHats">
	<defName>Lisas_MousekinApparel_MousekindNurseHat</defName>
	<label>Nurse's Cap</label>
	<description>A traditional part of a female nurse's uniform, originally intended to keep hair neat and present a modest appearance.</description>
	<graphicData>
		<texPath>Things/MousekinApparel/Hats/MousekindNurseHat</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		<shaderType>CutoutComplex</shaderType>
	</graphicData>
	<uiIconPath>Things/MousekinApparel/Preview/NurseHat</uiIconPath>
	<apparel>
		<wornGraphicPath>Things/MousekinApparel/Hats/MousekindNurseHat</wornGraphicPath>
		<useWornGraphicMask>true</useWornGraphicMask>
		<bodyPartGroups>
			<li>UpperHead</li>
		</bodyPartGroups>
		<layers>
			<li>Overhead</li>
		</layers>
		<defaultOutfitTags>
			<li>Worker</li>
		</defaultOutfitTags>
	</apparel>
	<costList>
		<!--  Always cloth only  -->
		<Cloth>20</Cloth>
	</costList>
	<statBases>
		<WorkToMake>500</WorkToMake>
		<Mass>0.1</Mass>
		<StuffEffectMultiplierArmor>0.02</StuffEffectMultiplierArmor>
		<StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
		<StuffEffectMultiplierInsulation_Heat>0.15</StuffEffectMultiplierInsulation_Heat>
		<EquipDelay>1</EquipDelay>
	</statBases>
	<equippedStatOffsets>
		<MedicalTendQualityOffset>0.05</MedicalTendQualityOffset>
	</equippedStatOffsets>
</ThingDef>
	
	<!--Chef-->
<ThingDef ParentName="Lisa'sMousekinApparelHats">
	<defName>Lisas_MousekinApparel__MousekindChefHat</defName>
	<label>Chef's Toque</label>
	<description>Toques prevent hair and sweat from contaminating food. White is the preferred color because it's easy to see if it's dirty.</description>
	<graphicData>
		<texPath>Things/MousekinApparel/Hats/MousekindChefHat</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
	<apparel>
		<wornGraphicPath>Things/MousekinApparel/Hats/MousekindChefHat</wornGraphicPath>
		<bodyPartGroups>
			<li>UpperHead</li>
		</bodyPartGroups>
		<layers>
			<li>Overhead</li>
		</layers>
		<defaultOutfitTags>
			<li>Worker</li>
		</defaultOutfitTags>
	</apparel>
	<costStuffCount>30</costStuffCount>
	<statBases>
		<WorkToMake>500</WorkToMake>
		<Mass>0.1</Mass>
		<StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
		<StuffEffectMultiplierInsulation_Cold>0.01</StuffEffectMultiplierInsulation_Cold>
		<StuffEffectMultiplierInsulation_Heat>0.01</StuffEffectMultiplierInsulation_Heat>
		<EquipDelay>1</EquipDelay>
	</statBases>
	<equippedStatOffsets>
		<CookSpeed>0.5</CookSpeed>
		<FoodPoisonChance>-0.1</FoodPoisonChance>
	</equippedStatOffsets>
</ThingDef>
	
	<!--Cowboy-->
